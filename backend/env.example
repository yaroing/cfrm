# Configuration de l'environnement CFRM
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Configuration Django
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,frontend

# Base de données
DATABASE_URL=postgresql://cfrm_user:cfrm_password@db:5432/cfrm_db

# Cache Redis
REDIS_URL=redis://redis:6379/0

# Configuration email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@cfrm.org

# Configuration Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Configuration WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token

# Configuration de sécurité
ENCRYPTION_KEY=your-32-character-encryption-key

# Configuration de logging
LOG_LEVEL=INFO
